<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_blue"
        app:layout_scrollFlags="scroll|enterAlways"
        app:navigationIcon="@drawable/arrow_left"
        app:navigationIconTint="@null"
        app:title="Change Appointment"
        app:titleTextColor="@android:color/black" />


    <LinearLayout
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bookingIdHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BookingID" />

        <TextView
            android:id="@+id/bookingId"
            style="@style/reviewCardView"
            android:layout_marginLeft="5dp"
            android:text="Booking ID" />

        <TextView
            android:id="@+id/userNameHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:  " />

        <TextView
            android:id="@+id/userName"
            style="@style/reviewCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Username:  " />

        <TextView
            android:id="@+id/staffNameHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responsible Staff:  " />

        <TextView
            android:id="@+id/staffName"
            style="@style/reviewCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Responsible Staff:  " />

        <TextView
            android:id="@+id/bookingDateTimeHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and Time:  " />

        <TextView
            android:id="@+id/bookingDateTime"
            style="@style/reviewCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Date and Time:  " />

        <TextView
            android:id="@+id/bookingProjectHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project:  " />

        <TextView
            android:id="@+id/bookingProject"
            style="@style/reviewCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Project:  " />

        <TextView
            android:id="@+id/bookingAddressHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: " />

        <TextView
            android:id="@+id/bookingAddress"
            style="@style/reviewCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Address: " />

        <TextView
            android:id="@+id/bookingStatusHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: " />

        <TextView
            android:id="@+id/bookingStatus"
            style="@style/reviewCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/updateStatus"
            android:layout_marginLeft="5dp"
            android:text="Status: " />

        <View
            android:id="@+id/divider14"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dateHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text="Select Date" />

        <EditText
            android:id="@+id/dateSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Select Date" />

        <TextView
            android:id="@+id/timeHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Time" />

        <EditText
            android:id="@+id/timeSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Select Time" />

        <TextView
            android:id="@+id/staffHeader"
            style="@style/questionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Staff" />

        <Spinner
            android:id="@+id/spinnerStaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit" />
    </LinearLayout>
</RelativeLayout>