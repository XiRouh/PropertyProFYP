<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/homeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookingIdHeader"
                style="@style/questionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BookingID" />

            <TextView
                android:id="@+id/bookingId"
                style="@style/reviewCardView"
                android:layout_marginLeft="5dp"
                android:text="Booking ID" />

            <TextView
                android:id="@+id/userNameHeader"
                style="@style/questionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username:  " />

            <TextView
                android:id="@+id/userName"
                style="@style/reviewCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Username:  " />

            <TextView
                android:id="@+id/staffNameHeader"
                style="@style/questionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responsible Staff:  " />

            <TextView
                android:id="@+id/staffName"
                style="@style/reviewCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Responsible Staff:  " />

            <TextView
                android:id="@+id/bookingDateTimeHeader"
                style="@style/questionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date and Time:  " />

            <TextView
                android:id="@+id/bookingDateTime"
                style="@style/reviewCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Date and Time:  " />

            <TextView
                android:id="@+id/bookingProjectHeader"
                style="@style/questionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project:  " />

            <TextView
                android:id="@+id/bookingProject"
                style="@style/reviewCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Project:  " />

            <TextView
                android:id="@+id/bookingAddressHeader"
                style="@style/questionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: " />

            <TextView
                android:id="@+id/bookingAddress"
                style="@style/reviewCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Address: " />

            <TextView
                android:id="@+id/bookingStatusHeader"
                style="@style/questionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: " />

            <TextView
                android:id="@+id/bookingStatus"
                style="@style/reviewCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/updateStatus"
                android:layout_marginLeft="5dp"
                android:text="Status: " />

            <!-- Button Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/changeAppointmentBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkblue"
                    android:text="Change Appointment"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkblue"
                    android:text="Cancel Appointment"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/updateStatusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkblue"
                    android:text="Update Status"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>