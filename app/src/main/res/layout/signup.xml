<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/white"
    android:gravity="center"
    android:hapticFeedbackEnabled="false"
    android:orientation="vertical"
    tools:context=".SignUpActivity" >


    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:contentDescription="Profile Picture"
        android:scaleType="centerCrop"
        android:src="@drawable/default_profile_image" />

    <ImageView
        android:id="@+id/changeProfileImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="205dp"
        android:clickable="true"
        android:contentDescription="Edit Profile Picture"
        android:src="@drawable/ic_pencil"
        app:tint="@color/black"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="255dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:scrollbarSize="5dp"
        android:text="@string/usernameTextView"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:cornerRadius="12sp"
        tools:ignore="VisualLintButtonSize" />


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="275dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Type your username"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="325dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:scrollbarSize="5dp"
        android:text="@string/emailTextView"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:cornerRadius="12sp"
        tools:ignore="VisualLintButtonSize" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="345dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="35dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Type your email"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/userTypeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="395dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:scrollbarSize="5dp"
        android:text="@string/userTypeTextView"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:cornerRadius="12sp"
        tools:ignore="VisualLintButtonSize" />

    <Spinner
        android:id="@+id/userType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="415dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="35dp"
        android:layout_weight="1"
        android:clickable="true"
        android:dropDownWidth="wrap_content"
        android:dropDownSelector="@color/white"
        android:ems="10"
        android:entries="@array/userType"
        android:focusable="auto"
        android:minHeight="48dp"
        android:spinnerMode="dropdown"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="470dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:scrollbarSize="5dp"
        android:text="@string/passwordTextView"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:cornerRadius="12sp"
        app:passwordToggleEnabled="true"
        tools:ignore="VisualLintButtonSize" />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="490dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Type your password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/black"
        app:passwordToggleEnabled="true" />

    <!--    <ImageView-->
    <!--        android:id="@+id/passwordToggle"-->
    <!--        android:layout_width="380dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="500dp"-->
    <!--        android:layout_marginEnd="16dp"-->
    <!--        android:layout_marginRight="27dp"-->
    <!--        android:layout_marginBottom="30dp"-->
    <!--        android:baselineAlignBottom="true"-->
    <!--        android:cropToPadding="true"-->
    <!--        android:scaleType="fitEnd"-->
    <!--        android:src="@drawable/ic_eye_closed"-->
    <!--        android:textAlignment="viewEnd"-->
    <!--        android:visibility="visible"-->
    <!--        app:tint="@color/white"/>-->

    <ImageView
        android:id="@+id/passwordToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="500dp"
        android:layout_marginRight="35dp"
        android:src="@drawable/ic_eye_closed"
        android:visibility="visible"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/confirmPasswordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="545dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:hint="Confirm your password"
        android:scrollbarSize="5dp"
        android:text="@string/confirmPasswordTextView"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:cornerRadius="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        tools:ignore="VisualLintButtonSize" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="565dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/black"
        app:passwordToggleEnabled="true" />

    <ImageView
        android:id="@+id/passwordToggle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="575dp"
        android:layout_marginRight="35dp"
        android:src="@drawable/ic_eye_closed"
        android:visibility="visible"
        app:tint="@color/black" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="620dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:backgroundTint="@color/darkblue"
        android:text="@string/signUpTextView"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="12sp"
        tools:ignore="VisualLintButtonSize,TextContrastCheck" />

    <TextView
        android:id="@+id/alreadyRegistered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="684dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:text="@string/alreadyRegistered"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        app:navigationIcon="@drawable/arrow_back_icon">

        <!-- Centered TextView -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewTitleStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="60dp"
                android:text="Signup"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

</FrameLayout>